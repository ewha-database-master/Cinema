<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="like.likeController">
    <children>
        <Pane prefHeight="60.0" prefWidth="400.0">
            <children>
            <Text fx:id="myNickname" fill="#d8d8d8" strokeType="OUTSIDE" strokeWidth="0.0" text="." />
                <Text layoutX="110.0" layoutY="40.0" strokeType="OUTSIDE" strokeWidth="0.0" text="나의 명작 추가하기">
                    <font>
                        <Font name="LG PC" size="29.0" />
                    </font>
                </Text>
            </children>
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </Pane>
        <VBox alignment="CENTER" prefHeight="250.0" prefWidth="100.0">
            <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="추가하고 싶은 명작의 제목을 검색하세요.">
                    <font>
                        <Font name="LG PC" size="20.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin>
