                                <Insets left="25.0" right="10.0" />
                            </HBox.margin>
                            <font>
                                <Font name="LG PC" size="23.0" />
                            </font>
                        </Text>
                        <TextField fx:id="movie_id" prefWidth="250.0" />
                    </children>
                </HBox>
                <Button mnemonicParsing="false" onAction="#insert_like" text="명작 추가하기">
                    <VBox.margin>
                        <Insets top="15.0" />
                    </VBox.margin>
                    <font>
                        <Font name="LG PC" size="21.0" />
                    </font>
                </Button>
            </children>
        </VBox>
        <Button fx:id="menu" alignment="BOTTOM_CENTER" mnemonicParsing="false" onAction="#goMenu" text="메뉴로 돌아가기">
            <font>
                <Font name="LG PC" size="16.0" />
            </font>
        </Button>
    </children>
